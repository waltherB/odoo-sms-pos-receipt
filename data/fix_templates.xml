<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Delete any existing problematic templates -->
        <delete model="sms.receipt.template" search="[('name', '=', 'Default SMS Receipt')]"/>
        
        <!-- Create Complete SMS Receipt Template -->
        <record id="complete_sms_receipt_template_fixed" model="sms.receipt.template">
            <field name="name">Complete SMS Receipt Template</field>
            <field name="active" eval="True"/>
            <field name="show_company_info" eval="True"/>
            <field name="company_info_template">{company_name}
{phone_line}
{vat_line}
{email_line}
{website_line}</field>
            <field name="show_separator" eval="True"/>
            <field name="separator_line">--------------------------------</field>
            <field name="show_order_info" eval="True"/>
            <field name="order_info_template">{served_by_line}
Ordre: {order_name}
Dato: {order_date}</field>
            <field name="show_items" eval="True"/>
            <field name="item_line_template">{qty}x {product_name} = {price} kr</field>
            <field name="show_total" eval="True"/>
            <field name="total_template">--------
TOTAL                kr {total}

{payment_method}          {amount}

BYTTEPENGE
                     kr {change}</field>
            <field name="show_tax" eval="True"/>
            <field name="tax_template">Moms    Beløb    Basis      I alt
25%     {tax_amount} kr  {tax_base} kr  {total} kr</field>
            <field name="show_customer" eval="True"/>
            <field name="customer_template">Kunde: {customer_name}</field>
            <field name="show_footer" eval="True"/>
            <field name="footer_template">Tak for dit køb!

{website_line}

{ticket_code_line}

Unik kode: {unique_code}
Ordre: {order_name}
{order_datetime}</field>
        </record>
        
        <!-- Create Minimal SMS Receipt Template -->
        <record id="minimal_sms_receipt_template_fixed" model="sms.receipt.template">
            <field name="name">Minimal SMS Receipt</field>
            <field name="active" eval="True"/>
            <field name="show_company_info" eval="True"/>
            <field name="company_info_template">{company_name}</field>
            <field name="show_separator" eval="False"/>
            <field name="show_order_info" eval="True"/>
            <field name="order_info_template">Ordre: {order_name} - {order_date}</field>
            <field name="show_items" eval="True"/>
            <field name="item_line_template">{qty}x {product_name} {price}kr</field>
            <field name="show_total" eval="True"/>
            <field name="total_template">Total: {total} kr ({payment_method})
Change: {change} kr</field>
            <field name="show_tax" eval="False"/>
            <field name="show_customer" eval="True"/>
            <field name="customer_template">Kunde: {customer_name}</field>
            <field name="show_footer" eval="True"/>
            <field name="footer_template">Tak for dit køb! {website_line}
{ticket_code_line}
Ref: {unique_code}</field>
        </record>
    </data>
</odoo>