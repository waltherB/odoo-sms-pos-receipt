<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="pos_sms_receipt.ReceiptScreen" t-inherit="point_of_sale.ReceiptScreen" t-inherit-mode="extension" owl="1">
        <!-- Add SMS controls after the email receipt section -->
        <xpath expr="//div[hasclass('receipt-screen')]//div[hasclass('next-content')]" position="before">
            <t t-if="shouldShowSmsFeature">
                <div class="sms-receipt-section d-flex flex-column gap-2 p-3 border-bottom">
                    <h5 class="mb-2">
                        <i class="fa fa-comment me-2"/>
                        <t t-esc="env._t('Send Receipt by SMS')"/>
                    </h5>
                    
                    <div class="d-flex flex-column gap-2">
                        <label for="sms_phone_input" class="form-label mb-1">
                            <t t-esc="env._t('Phone Number:')"/>
                        </label>
                        <input type="tel"
                               id="sms_phone_input"
                               class="form-control"
                               placeholder="+1234567890"
                               t-model="smsPhoneNumber"
                               aria-label="Phone number for SMS receipt"/>
                        
                        <button class="btn btn-primary btn-lg w-100" 
                                t-on-click="sendSmsReceipt">
                            <i class="fa fa-paper-plane me-2"/>
                            <t t-esc="env._t('Send SMS Receipt')"/>
                        </button>
                    </div>
                </div>
            </t>
        </xpath>
    </t>

</templates>
