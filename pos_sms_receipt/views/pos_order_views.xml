<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="pos_order_view_form_sms_receipt_v18" model="ir.ui.view">
            <field name="name">pos.order.form.sms.receipt.v18</field>
            <field name="model">pos.order</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
            <field name="arch" type="xml">
                <!-- Add fields to the form view, e.g., after partner_id -->
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="phone_for_sms_receipt" readonly="1" optional="show"/>
                    <field name="is_sms_receipt_sent" readonly="1" optional="show"/>
                </xpath>

                <!-- Add the button to resend SMS from backend -->
                <xpath expr="//header" position="inside">
                     <button name="button_send_sms_receipt_backend"
                            string="Resend SMS Receipt"
                            type="object"
                            class="oe_highlight"
                            attrs="{'invisible': [('state', 'in', ['draft', 'cancel'])]}"
                            help="Resend the receipt via SMS using the stored or customer's phone number."/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
