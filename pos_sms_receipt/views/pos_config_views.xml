<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="pos_config_view_form_sms_receipt_v18" model="ir.ui.view">
            <field name="name">pos.config.form.sms.receipt.v18</field>
            <field name="model">pos.config</field>
            <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
            <field name="arch" type="xml">
                <!--
                    The XPath target might need adjustment based on Odoo 18's pos.config form view structure.
                    Commonly, settings are grouped. Looking for a div with class 'o_setting_box' or specific sections.
                    Let's try to place it after the 'Receipt & Printing' section's header or a known element within it.
                    A common element is 'receipt_header_footer'.
                -->
                <xpath expr="//div[@id='receipt_header_footer']" position="after">
                     <div class="col-12 col-lg-6 o_setting_box" id="sms_receipt_settings_v18">
                        <div class="o_setting_left_pane">
                            <field name="enable_sms_receipt"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="enable_sms_receipt" string="SMS Receipts"/>
                            <div class="text-muted">
                                Allow sending POS receipts via SMS.
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
