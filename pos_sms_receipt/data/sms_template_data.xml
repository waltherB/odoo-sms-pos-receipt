<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1"> <!-- noupdate="1" to prevent overriding user changes on module update -->

        <record id="sms_template_pos_receipt" model="sms.template">
            <field name="name">POS Order Receipt SMS (Odoo 18)</field>
            <field name="model_id" ref="point_of_sale.model_pos_order"/>
            <field name="body">Dear {{ object.partner_id.name if object.partner_id else 'Customer' }},
Your receipt for order {{ object.pos_reference }}:
Total: {{ "%.2f" % object.amount_total }} {{ object.currency_id.symbol }}.
{{ object.company_id.name if object.company_id else '' }}
Thank you!</field>
            <!--
                Note: Using `%.2f` for basic float formatting.
                Odoo's `format_amount(object.amount_total, object.currency_id)` is generally preferred
                if the rendering context for sms.template supports it fully.
                For broader compatibility, direct formatting is used here.
            -->
            <field name="template_fs" eval="False"/>
            <!-- <field name="lang">{{ user.lang }}</field> --> <!-- Optional: for multi-language if user context is available -->
        </record>

    </data>
</odoo>
